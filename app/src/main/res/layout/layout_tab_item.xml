<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_tab_height">
<android.support.v7.widget.CardView
    app:cardElevation="@dimen/dimen_elevation"
    app:cardCornerRadius="@dimen/dimen_tab_radius"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="@dimen/dimen_padding_hor_base"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<LinearLayout
    android:minWidth="@dimen/dimen_oval_min_width"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/icon_bike"
        style="@style/StyleIcon.Mini"
        android:layout_gravity="center_vertical"
        android:tint="@color/colorPrimary"/>

    <TextView
        tools:text="Rentals"
        android:id="@id/id_item_title"
        android:layout_margin="@dimen/dimen_padding_hor_small"
        android:layout_gravity="center"
        android:textColor="@color/color_dark"
        android:textSize="@dimen/dimen_text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>